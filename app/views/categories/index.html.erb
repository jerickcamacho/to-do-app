<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', user_category_path(@user, category) %></td>
        <td><%= link_to 'Edit', edit_user_category_path(@user,category) %></td>
        <td><%= link_to 'Remove',user_category_path(@user, category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classification', new_user_category_path(@user) %>

